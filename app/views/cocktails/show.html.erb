<%= link_to "Home", cocktails_path %>
<h1> <%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.ingredient.name %> : <%= dose.description %>
  <%= link_to "Delete", cocktail_dose_path(@cocktail, dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
<%end %>

<p> <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %></p>

